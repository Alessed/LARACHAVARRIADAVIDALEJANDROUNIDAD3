@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    ViewBag.Title = "Verificación de Token | Dentalara";
}

<style>
    .token-container {
        max-width: 420px;
        margin: 0 auto;
        padding: 2rem;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .token-card {
        background: #ffffff;
        border-radius: 6px;
        padding: 2.5rem;
        box-shadow: 0 2px 15px rgba(0, 0, 0, 0.08);
        border: 1px solid #e0e7f5;
    }

    .token-title {
        color: #1e3a8a;
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 1.8rem;
        text-align: center;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .form-label {
        display: block;
        color: #374151;
        font-weight: 500;
        margin-bottom: 0.6rem;
        font-size: 0.95rem;
        text-align: center;
    }

    .form-input {
        width: 100%;
        padding: 0.9rem;
        border: 1px solid #d1d5db;
        border-radius: 4px;
        margin-bottom: 0.5rem;
        font-size: 1.1rem;
        letter-spacing: 3px;
        text-align: center;
        background-color: #f9fafb;
        font-family: monospace;
    }

        .form-input:focus {
            outline: none;
            border-color: #3b82f6;
            background-color: #ffffff;
            box-shadow: 0 0 0 2px rgba(59, 130, 246, 0.1);
        }

    .form-hint {
        color: #6b7280;
        font-size: 0.85rem;
        margin-bottom: 1.5rem;
        display: block;
        text-align: center;
        line-height: 1.5;
    }

    .btn-verify {
        background: #2563eb;
        color: white;
        width: 100%;
        padding: 0.85rem;
        border: none;
        border-radius: 4px;
        font-weight: 600;
        cursor: pointer;
        font-size: 1rem;
        letter-spacing: 0.5px;
        transition: background 0.15s ease;
        text-transform: uppercase;
    }

        .btn-verify:hover {
            background: #1d4ed8;
        }

    .alert-error {
        padding: 0.85rem;
        border-radius: 4px;
        margin-bottom: 1.5rem;
        text-align: center;
        font-size: 0.9rem;
        background: #fef2f2;
        color: #b91c1c;
        border: 1px solid #fee2e2;
    }

    .link-back {
        display: block;
        text-align: center;
        margin-top: 1.8rem;
        color: #2563eb;
        text-decoration: none;
        font-weight: 500;
        font-size: 0.9rem;
    }

        .link-back:hover {
            text-decoration: underline;
            color: #1e40af;
        }

    .dental-icon {
        text-align: center;
        margin-bottom: 1.2rem;
        color: #1e3a8a;
        font-size: 2.2rem;
    }
</style>

<div class="token-container">
    <div class="token-card">
        <div class="dental-icon">
            <i class="fas fa-shield-alt"></i> <!-- Icono de seguridad -->
        </div>
        <h1 class="token-title">Verificación de Seguridad</h1>

        @if (ViewBag.Error != null)
        {
            <div class="alert-error">@ViewBag.Error</div>
        }

        <form asp-action="IngresarToken" method="post">
            <input type="hidden" name="email" value="@ViewBag.Email" />

            <div class="form-group">
                <label for="token" class="form-label">Código de Verificación</label>
                <input type="text" id="token" name="token" class="form-input"
                       placeholder="••••••" required maxlength="6" pattern="\d{6}" />
                <span class="form-hint">Por favor ingrese el código de 6 dígitos que hemos enviado a su correo electrónico.</span>
            </div>

            <button type="submit" class="btn-verify">Validar Código</button>

            <a href="/Recuperar/Recuperar" class="link-back">← Volver a recuperación de contraseña</a>
        </form>
    </div>
</div>